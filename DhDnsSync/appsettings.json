{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  
  "DreamHostConfig": {
    "UpdateIntervalMinutes": 60,
    "ApiKey": "<insert key here>",
    "Zone": "example.com",
    "DnsRecords": [
      {
        "UpdateMode": "PublicIp",
        "Type": "A",
        "Name": "@",
        "Value": "127.0.0.1"
      },
      {
        "UpdateMode": "PublicIp",
        "Type": "A",
        "Name": "www"
      },
      {
        "UpdateMode": "EnsureExists",
        "Type": "MX",
        "Name": "@",
        "Value": "0 example-com.mail.protection.outlook.com"
      }
    ]
  }
}
